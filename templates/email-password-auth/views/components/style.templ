package components

templ Style(page string) {
	switch page {
		case "index":
			<style></style>
		case "login":
			<style type="text/css">
				#login {
					form {
						display: flex;
						flex-direction: column;
						gap: 1rem;
					}
				}
			</style>
		case "register":
			<style type="text/css">
				#register {
					form {
						display: flex;
						flex-direction: column;
						gap: 1rem;
					}
				}
			</style>
		default:
			<style></style>
	}
}
